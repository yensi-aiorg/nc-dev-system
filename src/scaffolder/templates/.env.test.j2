# {{ project_name }} Test Environment

# Application
PROJECT_NAME={{ project_name }}
DEBUG=true
LOG_LEVEL=debug
TESTING=true

# Backend
BACKEND_PORT={{ ports.backend }}
CORS_ORIGINS=*

# MongoDB
MONGODB_URL=mongodb://localhost:{{ ports.mongodb }}
DATABASE_NAME={{ project_name | replace('-', '_') }}_test_db

# Redis
REDIS_URL=redis://localhost:{{ ports.redis }}/0

# Frontend
VITE_API_URL=http://localhost:{{ ports.backend }}/api/v1
VITE_PORT={{ ports.frontend }}
VITE_MOCK_APIS=true
{% if auth_required %}

# KeyCloak
KEYCLOAK_URL=http://localhost:{{ ports.keycloak }}
KEYCLOAK_REALM={{ project_name }}
KEYCLOAK_CLIENT_ID={{ project_name }}-api
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_DB_PASSWORD=keycloak
VITE_KEYCLOAK_URL=http://localhost:{{ ports.keycloak }}
VITE_KEYCLOAK_REALM={{ project_name }}
VITE_KEYCLOAK_CLIENT_ID={{ project_name }}-frontend

# JWT
JWT_SECRET_KEY=test-secret-key-not-for-production
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
{% endif %}
