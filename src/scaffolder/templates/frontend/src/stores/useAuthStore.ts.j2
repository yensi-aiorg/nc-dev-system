{% if auth_required %}
import { create } from 'zustand';
import { devtools } from 'zustand/middleware';
import { api } from '@/api';
import { ENDPOINTS } from '@/api/endpoints';
import type { User, LoginRequest, LoginResponse } from '@/api/types';

interface AuthState {
  user: User | null;
  isAuthenticated: boolean;
  isLoading: boolean;
  error: string | null;
  login: (credentials: LoginRequest) => Promise<void>;
  logout: () => Promise<void>;
  fetchCurrentUser: () => Promise<void>;
  clearError: () => void;
}

export const useAuthStore = create<AuthState>()(
  devtools(
    (set) => ({
      user: null,
      isAuthenticated: !!localStorage.getItem('access_token'),
      isLoading: false,
      error: null,

      login: async (credentials: LoginRequest) => {
        set({ isLoading: true, error: null }, false, 'login/start');
        try {
          const response = await api.post<LoginResponse>(
            ENDPOINTS.AUTH.LOGIN,
            credentials
          );
          const { access_token, refresh_token } = response.data;
          localStorage.setItem('access_token', access_token);
          localStorage.setItem('refresh_token', refresh_token);
          set(
            { isAuthenticated: true, isLoading: false, error: null },
            false,
            'login/success'
          );
        } catch (error) {
          const message =
            error instanceof Error ? error.message : 'Login failed';
          set(
            { isLoading: false, error: message, isAuthenticated: false },
            false,
            'login/error'
          );
          throw error;
        }
      },

      logout: async () => {
        set({ isLoading: true }, false, 'logout/start');
        try {
          await api.post(ENDPOINTS.AUTH.LOGOUT);
        } catch {
          // Logout even if the server request fails
        } finally {
          localStorage.removeItem('access_token');
          localStorage.removeItem('refresh_token');
          set(
            {
              user: null,
              isAuthenticated: false,
              isLoading: false,
              error: null,
            },
            false,
            'logout/complete'
          );
        }
      },

      fetchCurrentUser: async () => {
        set({ isLoading: true, error: null }, false, 'fetchUser/start');
        try {
          const response = await api.get<User>(ENDPOINTS.AUTH.ME);
          set(
            { user: response.data, isLoading: false },
            false,
            'fetchUser/success'
          );
        } catch (error) {
          const message =
            error instanceof Error ? error.message : 'Failed to fetch user';
          set(
            { error: message, isLoading: false },
            false,
            'fetchUser/error'
          );
          throw error;
        }
      },

      clearError: () => set({ error: null }, false, 'clearError'),
    }),
    { name: 'auth-store' }
  )
);
{% else %}
// Authentication is not enabled for this project.
// This file is a placeholder to maintain consistent imports.
export {};
{% endif %}
